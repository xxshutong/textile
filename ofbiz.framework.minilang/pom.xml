<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.opentaps</groupId>
    <artifactId>ofbiz.framework.minilang</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>bundle</packaging>
    <name>${bundle.symbolicName}</name>

    <dependencies>
        <dependency>
            <groupId>org.opentaps</groupId>
            <artifactId>ofbiz.framework.entity</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.opentaps</groupId>
            <artifactId>ofbiz.framework.base</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.opentaps</groupId>
            <artifactId>ofbiz.framework.service</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>org.opentaps</groupId>
            <artifactId>ofbiz.framework.security</artifactId>
            <version>0.0.1-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>javolution</groupId>
            <artifactId>javolution</artifactId>
            <version>5.5.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
        	<groupId>org.opentaps</groupId>
        	<artifactId>org.opentaps.ofbiz-bsh</artifactId>
        	<version>2.0.0.b4-001-SNAPSHOT</version>
        </dependency>
    </dependencies>

    <properties>
        <bundle.symbolicName>org.opentaps.ofbiz.framework.minilang</bundle.symbolicName>
        <bundle.namespace>org.ofbiz.minilang</bundle.namespace>
    </properties>

    <parent>
        <relativePath>../poms/compiled/</relativePath>
        <groupId>org.opentaps.opentaps2.build</groupId>
        <artifactId>compiled-bundle-settings</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <configuration>
                    <instructions>
                        <Bundle-SymbolicName>${bundle.symbolicName}</Bundle-SymbolicName>
                        <Bundle-Version>${project.version}</Bundle-Version>
                        <Export-Package>org.ofbiz.minilang.*</Export-Package>
                        <Import-Package>
                            org.w3c.dom;version="0.0.0",
                            org.xml.sax.*;version="0.0.0",
                            javax.xml.parsers;version="0.0.0",
                            org.ofbiz.minilang.*,
                            *
                        </Import-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>