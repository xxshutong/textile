  <modelVersion>4.0.0</modelVersion>
  <groupId>org.opentaps</groupId>
  <artifactId>opentaps2</artifactId>
  <version>1.0.0-SNAPSHOT</version>

  <name>org.opentaps.opentaps2 (OSGi project)</name>

  <!--
   | describe your project here
  -->

  <description>Generated using Pax-Construct</description>

  <properties>
    <org.osgi.service.http.port>8080</org.osgi.service.http.port>
    <org.osgi.service.http.port.secure>8443</org.osgi.service.http.port.secure>
    <spring.dm.version>2.0.0.M1</spring.dm.version>
    <spring.version>3.0.2.RELEASE</spring.version>
    <servlet.api>2.5.0</servlet.api>
    <felix.version>2.0.5</felix.version>
    <opentaps.version>2.0.0-SNAPSHOT</opentaps.version>
  </properties>

  <packaging>pom</packaging>

  <modules>
    <module>poms</module>
    <module>provision</module>
    <module>example.entity</module>
    <module>example.ui.jsp</module>
    <module>features</module>
  </modules>

  <build>
    <plugins>
      <plugin>
        <groupId>org.ops4j</groupId>
        <artifactId>maven-pax-plugin</artifactId>
        <version>1.4</version>
        <configuration>
          <provision>
            <param>--platform=equinox</param>
            <param>--profiles=minimal</param>
            <param>--vmOptions=-Dorg.osgi.service.http.port=8181</param>
          </provision>
        </configuration>
        <executions>
          <execution>
            <id>ide-support</id>
            <goals>
              <goal>eclipse</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <repositories>
    <repository>
      <id>com.springsource.repository.bundles.release</id>
      <name>SpringSource Enterprise Bundle Repository - SpringSource Bundle Releases</name>
      <url>http://repository.springsource.com/maven/bundles/release</url>
    </repository>
    <repository>
      <id>com.springsource.repository.bundles.external</id>
      <name>SpringSource Enterprise Bundle Repository - External Bundle Releases</name>
      <url>http://repository.springsource.com/maven/bundles/external</url>
    </repository>
    <repository>
      <id>spring-maven-milestone</id>
      <name>Springframework Maven Repository</name>
      <url>http://maven.springframework.org/milestone</url>
    </repository>
    <repository>
      <id>spring-maven-osgi</id>
      <url>http://maven.springframework.org/osgi</url>
    </repository>
    <repository>
      <id>OPS4J</id>
      <url>http://repository.ops4j.org/maven2</url>
    </repository>
  </repositories>

</project>