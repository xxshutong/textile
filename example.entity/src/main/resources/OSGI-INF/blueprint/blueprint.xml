<?xml version="1.0" encoding="UTF-8"?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                default-activation="eager">

    <bean id="postgresDataSource" class="org.postgresql.jdbc2.optional.PoolingDataSource">
        <property name="databaseName" value="opentaps"/>
        <!-- This creates the database on the fly. -->
        <!-- property name="createDatabase" value="create" /-->
    </bean>

    <service id="ExampleDataSource" ref="postgresDataSource" interface="javax.sql.XADataSource">
        <service-properties>
            <entry key="osgi.jndi.service.name" value="jdbc/ExampleDataSource"/>
        </service-properties>
    </service>

</blueprint>