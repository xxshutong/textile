<?xml version="1.0" encoding="UTF-8"?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <reference id="noteRepositoryService" interface="org.opentaps.notes.repository.NoteRepository"/>

    <bean id="createNoteServiceImpl" class="org.opentaps.notes.services.impl.CreateNoteServiceImpl">
        <property name="noteRepository" ref="noteRepositoryService"/>
    </bean>
    <service ref="createNoteServiceImpl" interface="org.opentaps.notes.services.CreateNoteService"/>

    <bean id="createNoteServiceImpl" class="org.opentaps.notes.services.impl.GetNoteByIdServiceImpl">
        <property name="noteRepository" ref="noteRepositoryService"/>
    </bean>
    <service ref="getNoteByIdServiceImpl" interface="org.opentaps.notes.services.GetNoteByIdService"/>

</blueprint>
