<?xml version="1.0" encoding="UTF-8"?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                default-activation="eager">

    <bean id="MysqlXaDataSource" class="com.mysql.jdbc.jdbc2.optional.MysqlXADataSource">
        <property name="databaseName" value="opentaps"/>
        <property name="serverName" value="localhost"/>
        <property name="user" value="opentaps"/>
        <property name="password" value="opentaps"/>
    </bean>

    <service id="opentaps-db-xa" ref="MysqlXaDataSource" interface="javax.sql.DataSource">
        <service-properties>
            <entry key="osgi.jndi.service.name" value="jdbc/opentaps-db-xa"/>
        </service-properties>
    </service>

    <bean id="MysqlDataSource" class="com.mysql.jdbc.jdbc2.optional.MysqlDataSource">
        <property name="databaseName" value="opentaps"/>
        <property name="serverName" value="localhost"/>
        <property name="user" value="opentaps"/>
        <property name="password" value="opentaps"/>
    </bean>

    <service id="opentaps-db-none" ref="MysqlDataSource" interface="javax.sql.DataSource">
        <service-properties>
            <entry key="osgi.jndi.service.name" value="jdbc/opentaps-db-none"/>
        </service-properties>
    </service>

    <!-- database connection, opentaps 2 DB -->

    <bean id="MysqlXaDataSource2" class="com.mysql.jdbc.jdbc2.optional.MysqlXADataSource">
        <property name="databaseName" value="opentaps2"/>
        <property name="serverName" value="localhost"/>
        <property name="user" value="opentaps"/>
        <property name="password" value="opentaps"/>
    </bean>

    <service id="opentaps2-db-xa" ref="MysqlXaDataSource2" interface="javax.sql.DataSource">
        <service-properties>
            <entry key="osgi.jndi.service.name" value="jdbc/opentaps2-db-xa"/>
        </service-properties>
    </service>

    <bean id="MysqlDataSource2" class="com.mysql.jdbc.jdbc2.optional.MysqlDataSource">
        <property name="databaseName" value="opentaps2"/>
        <property name="serverName" value="localhost"/>
        <property name="user" value="opentaps"/>
        <property name="password" value="opentaps"/>
    </bean>

    <service id="opentaps2-db-none" ref="MysqlDataSource2" interface="javax.sql.DataSource">
        <service-properties>
            <entry key="osgi.jndi.service.name" value="jdbc/opentaps2-db-none"/>
        </service-properties>
    </service>

</blueprint>
