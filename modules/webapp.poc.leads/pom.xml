<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <artifactId>modules</artifactId>
        <groupId>org.opentaps</groupId>
        <version>2.0.1-SNAPSHOT</version>
    </parent>

    <artifactId>webapp.poc.leads</artifactId>
    <name>Simple Lead Managment Application</name>
    <description>A Proof Of Concept</description>
    <packaging>bundle</packaging>

    <build>
        <resources>
            <resource>
                <directory>src/main/java</directory>
                <includes>
                    <include>**</include>
                </includes>
                <excludes>
                    <exclude>**/*.java</exclude>
                </excludes>
            </resource>
        </resources>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <executions>
                    <execution>
                        <id>bundle-manifest</id>
                        <phase>process-classes</phase>
                        <goals>
                            <goal>manifest</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <supportedProjectTypes>
                        <supportedProjectType>jar</supportedProjectType>
                        <supportedProjectType>bundle</supportedProjectType>
                        <supportedProjectType>war</supportedProjectType>
                    </supportedProjectTypes>
                    <instructions>
                        <Web-ContextPath>/leads</Web-ContextPath>
                        <Bundle-Version>${project.version}</Bundle-Version>
                        <Export-Package>
                            org.opentaps.webapp.poc.leads,
                            org.opentaps.webapp.poc.leads.security
                        </Export-Package>
                        <_wab>src/main/webapp</_wab>
                        <Import-Package>com.sun.security.auth;resolution:=optional,org.apache.wicket.protocol.http,*</Import-Package>
                        <Private-Package>org.opentaps.webapp.poc.leads.bundle</Private-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.opentaps</groupId>
            <artifactId>org.apache.wicket</artifactId>
            <version>1.5.0-rc2</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.wicket</groupId>
            <artifactId>wicket-auth-roles</artifactId>
            <version>1.5-rc2</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
        	<groupId>org.opentaps</groupId>
        	<artifactId>ui.widget</artifactId>
        	<version>2.0.1-SNAPSHOT</version>
        	<scope>provided</scope>
        </dependency>
        <dependency>
        	<groupId>org.osgi</groupId>
        	<artifactId>org.osgi.core</artifactId>
        	<version>4.2.0</version>
        	<scope>provided</scope>
        </dependency>
        <dependency>
        	<groupId>org.opentaps</groupId>
        	<artifactId>core</artifactId>
        	<version>2.0.1-SNAPSHOT</version>
        	<scope>provided</scope>
        </dependency>
    </dependencies>

</project>